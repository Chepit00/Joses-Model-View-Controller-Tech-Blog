
<div class="container mt-5">
    <div class="row">
        <div class="col-md-8">
            <h2>Dashboard</h2>

            {{#if posts.length}}
            <h3>Your Posts</h3>
            <div class="list-group mt-3">
                {{#each posts}}
                <div class="list-group-item">
                    <h5 class="mb-1">{{title}}</h5>
                    <p class="mb-1">Posted on {{createdAt}}</p>
                    <div class="btn-group" role="group" aria-label="Post Actions">
                        <a href="/post/{{id}}" class="btn btn-outline-primary btn-sm">View</a>
                        <a href="/edit-post/{{id}}" class="btn btn-outline-secondary btn-sm">Edit</a>
                        <form action="/delete-post/{{id}}" method="POST" class="d-inline">
                            <button type="submit" class="btn btn-outline-danger btn-sm"
                                onclick="return confirm('Are you sure you want to delete this post?')">Delete</button>
                        </form>
                    </div>
                </div>
                {{/each}}
            </div>
            {{else}}
            <p>No posts available. <a href="/new-post">Create a new post</a>.</p>
            {{/if}}
        </div>
    </div>
</div>
